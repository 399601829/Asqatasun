<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.asqatasun.webapp.controller"/>

    <!-- for HomeController-->
    <util:list id="displayOptionFieldsBuilderList" list-class="java.util.ArrayList">
        <ref bean="displayContractElementSelectFormFieldBuilder"/>
        <ref bean="displayContractOrderSelectFormFieldBuilder"/>
        <ref bean="inclusionRegexpContractFormFieldBuilder"/>
        <ref bean="exclusionRegexpContractFormFieldBuilder"/>
    </util:list>

    <!-- for AuditResultController and ManualAuditController -->
    <util:list id="formFieldBuilderList" list-class="java.util.ArrayList">
        <ref bean="aw22ThemeSelectFormFieldBuilder"/>
        <ref bean="rgaa30ThemeSelectFormFieldBuilder"/>
        <ref bean="testResultCheckboxFormFieldBuilder"/>
    </util:list>

    <util:map id="defaultParametersToDisplay" map-class="java.util.HashMap">
        <entry key="LEVEL"><value>level</value></entry>
        <entry key="DATA_TABLE_MARKER"><value>data-table</value></entry>
        <entry key="COMPLEX_TABLE_MARKER"><value>complex-table</value></entry>
        <entry key="PRESENTATION_TABLE_MARKER"><value>presentation-table</value></entry>
        <entry key="DECORATIVE_IMAGE_MARKER"><value>decorative-image</value></entry>
        <entry key="INFORMATIVE_IMAGE_MARKER"><value>informative-image</value></entry>
        <entry key="ALTERNATIVE_CONTRAST_MECHANISM"><value>contrast-alternative</value></entry>
        <entry key="SCREEN_WIDTH"><value>screen-width</value></entry>
        <entry key="SCREEN_HEIGHT"><value>screen-height</value></entry>
    </util:map>

    <util:map id="auditSynthesisParametersToDisplay" map-class="java.util.HashMap">
        <entry key="LEVEL"><value>level</value></entry>
        <entry key="DEPTH"><value>depth</value></entry>
        <entry key="MAX_DURATION"><value>max-duration</value></entry>
        <entry key="MAX_DOCUMENTS"><value>max-documents</value></entry>
        <entry key="EXCLUSION_REGEXP"><value>exclusion-regexp</value></entry>
        <entry key="INCLUSION_REGEXP"><value>inclusion-regexp</value></entry>
        <entry key="DATA_TABLE_MARKER"><value>data-table</value></entry>
        <entry key="COMPLEX_TABLE_MARKER"><value>complex-table</value></entry>
        <entry key="PRESENTATION_TABLE_MARKER"><value>presentation-table</value></entry>
        <entry key="DECORATIVE_IMAGE_MARKER"><value>decorative-image</value></entry>
        <entry key="INFORMATIVE_IMAGE_MARKER"><value>informative-image</value></entry>
        <entry key="ALTERNATIVE_CONTRAST_MECHANISM"><value>contrast-alternative</value></entry>
        <entry key="CONSIDER_COOKIES"><value>consider-cookies</value></entry>
    </util:map>

    <!-- for AuditSetUpController-->
    <util:list id="crawl-limits" list-class="java.util.ArrayList">
        <ref bean="depthParamBuilder"/>
        <ref bean="maxDurationParamBuilder"/>
        <ref bean="maxDocumentsParamBuilder"/>
    </util:list>

    <util:list id="crawl-options" list-class="java.util.ArrayList">
        <ref bean="inclusionRegexpParamBuilder"/>
        <ref bean="exclusionRegexpParamBuilder"/>
        <ref bean="considerCookiesParamBuilder"/>
    </util:list>

    <util:list id="marker-parameters" list-class="java.util.ArrayList">
        <ref bean="dataTableParamBuilder"/>
        <ref bean="presentationTableParamBuilder"/>
        <ref bean="complexTableParamBuilder"/>
        <ref bean="decorativeImageParamBuilder"/>
        <ref bean="informativeImageParamBuilder"/>
    </util:list>

    <util:list id="contrast-parameters" list-class="java.util.ArrayList">
        <ref bean="alternativeContrastMechanismPresentParamBuilder"/>
    </util:list>

    <util:list id="resolution-parameters" list-class="java.util.ArrayList">
        <ref bean="screenWidthParamBuilder"/>
        <ref bean="screenHeightParamBuilder"/>
    </util:list>

    <util:map id="siteOptionFormFieldBuilderMap" map-class="java.util.HashMap">
        <entry key="crawl-limits"><ref bean="crawl-limits"/></entry>
        <entry key="crawl-options"><ref bean="crawl-options"/></entry>
        <entry key="marker-parameters"><ref bean="marker-parameters"/></entry>
        <entry key="contrast-parameters"><ref bean="contrast-parameters"/></entry>
    </util:map>

    <util:map id="pageOptionFormFieldBuilderMap" map-class="java.util.HashMap">
        <entry key="marker-parameters"><ref bean="marker-parameters"/></entry>
        <entry key="resolution-parameters"><ref bean="resolution-parameters"/></entry>
        <entry key="contrast-parameters"><ref bean="contrast-parameters"/></entry>
    </util:map>

    <util:map id="uploadOptionFormFieldBuilderMap" map-class="java.util.HashMap">
        <entry key="marker-parameters"><ref bean="marker-parameters"/></entry>
    </util:map>

    <util:map id="viewFunctionalityBindingMap" map-class="java.util.HashMap">
        <entry key="audit-page-set-up"><value>PAGES</value></entry>
        <entry key="audit-site-set-up"><value>DOMAIN</value></entry>
        <entry key="audit-upload-set-up"><value>UPLOAD</value></entry>
        <entry key="audit-scenario-set-up"><value>SCENARIO</value></entry>
    </util:map>

    <util:map id="scenarioOptionFormFieldBuilderMap" map-class="java.util.HashMap">
        <entry key="marker-parameters"><ref bean="marker-parameters"/></entry>
        <entry key="resolution-parameters"><ref bean="resolution-parameters"/></entry>
        <entry key="contrast-parameters"><ref bean="contrast-parameters"/></entry>
    </util:map>

    <util:map id="auditExportDefaultParametersToDisplay" map-class="java.util.HashMap">
        <entry key="LEVEL"><value>level</value></entry>
    </util:map>

    <!-- for ContractManagementController and UserManagementController -->
    <util:map id="contractOptionFormFieldBuilderMap" map-class="java.util.HashMap">
        <entry key="general-options">
            <list>
                <ref bean="nbMaxAuditsPerContractOptionBuilder"/>
                <ref bean="nbMaxPagesAuditsPerContractOptionBuilder"/>
                <ref bean="nbMaxDomainAuditsPerContractOptionBuilder"/>
                <ref bean="nbMaxUploadAuditsPerContractOptionBuilder"/>
                <ref bean="nbMaxScenarioAuditsPerContractOptionBuilder"/>
                <ref bean="nbMaxActsToDisplayPerContractOptionBuilder"/>
            </list>
        </entry>
        <entry key="crawl-options">
            <list>
                <ref bean="depthOptionBuilder"/>
                <ref bean="maxDurationOptionBuilder"/>
                <ref bean="maxDocumentsOptionBuilder"/>
                <ref bean="exclusionRegexpOptionBuilder"/>
            </list>
        </entry>
    </util:map>
    <util:list id="contractManagementOptionFieldsBuilderList" list-class="java.util.ArrayList">
        <ref bean="displayContractOrderSelectFormFieldBuilder"/>
        <ref bean="inclusionRegexpContractFormFieldBuilder"/>
        <ref bean="exclusionRegexpContractFormFieldBuilder"/>
    </util:list>

</beans>