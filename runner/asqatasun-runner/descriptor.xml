<!--asqatasun-runner-->
<assembly xmlns="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0 http://maven.apache.org/xsd/resources-1.1.0.xsd">
    <id>asqatasun_runner</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../../</directory>
            <includes>
                <include>README.md</include>
                <include>CHANGELOG.md</include>
                <include>LICENSE</include>
            </includes>
            <fileMode>644</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/scripts</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
